
<div class="container">
  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-xs-12">
        <div class="jumbotron">  
          <div class="form-group">
            <%= f.label :name %>
            <div class="col-lg-10">
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password %>
              <div class="col-lg-10">
                <%= f.password_field :password %>
                </div>
              </div>
          <div class="form-group">
            <%= f.label :password_confirmation %>
              <div class="col-lg-10">
                <%= f.password_field :password_confirmation %>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="well panel-primary">
              <center><h3 class="panel-title"><%= f.submit "Sign Up" %><% end %></h3></center>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>